
# GitHub Personal Access Token with 'repo' scope
# Create one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Repositories to track (comma-separated)
# Format: owner/repo or just repo name
TARGET_REPOS=

# Users to track (comma-separated)
# Use GitHub usernames
TARGET_USERS=

# Optional: Organization to track
GITHUB_ORG=

# Optional: Specify a date to check (YYYY-MM-DD format)
# If not specified, today's date will be used
# You can also use "TODAY" to explicitly use today's date
TARGET_DATE=TODAY

# Optional: Enable to check previous day if no contributions found today
CHECK_PREVIOUS_DAY=true

# Optional: Control output format (simple or detailed)
OUTPUT_FORMAT=detailed

# Optional: Disable file output (only show in console)
NO_FILES=false

# Optional: Specify custom output directory for reports
OUTPUT_DIR=reports

# Optional: Enable for detailed logging
DEBUG=false

# Optional: Maximum number of branches to check for commits (default: 10)
MAX_BRANCHES=10

# WhatsApp integration using Twilio
# Create a Twilio account at https://www.twilio.com and get these credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Format: whatsapp:+1234567890
TWILIO_WHATSAPP_FROM=
# Format: whatsapp:+1234567890
WHATSAPP_TO=
